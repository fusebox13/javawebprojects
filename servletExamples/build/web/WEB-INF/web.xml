<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddToEmailListServlet</servlet-name>
        <servlet-class>email.AddToEmailListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestBook</servlet-name>
        <servlet-class>guest.GuestBook</servlet-class>
        <init-param>
            <param-name>guestFile</param-name>
            <param-value>myGuestBook.txt</param-value>
        </init-param>
        <init-param>
            <param-name>guestPath</param-name>
            <param-value>work</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToEmailListServlet</servlet-name>
        <url-pattern>/addToEmailList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestBook</servlet-name>
        <url-pattern>/GuestBook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
